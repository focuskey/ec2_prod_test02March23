<odoo>
    <record id="view_my_model_website" model="ir.ui.view">
        <field name="name">my.model.website</field>
        <field name="model">my.model</field>
        <field name="arch" type="xml">

            <template>
                <t t-name="my_model_table">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Price</th>
                            </tr>
                        </thead>

                        <tbody>
                            <t t-foreach="records" t-as="record">
                                <tr>
                                    <td><t t-esc="record.name"/></td>
                                    <td><t t-esc="record.description"/></td>
                                    <td><t t-esc="record.price"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </t>
            </template>
        </field>
    </record>
</odoo>