<odoo>
    <record id="view_from_carpetcall" model="ir.ui.view">
        <field name="name">CarpetCALL Form</field>
        <field name="model">carpetcall.book</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" invisible="True" />
<!--                    <button name="button_check_isbn" type="object" string="Check ISBN" />-->


                    <button name="button_done0"
                            type="object"
                            string="Confirm the Requested"
                            attrs="{'invisible': [('state', 'in', ['open', 'done', 'cancel'])]}"
                            states="new"
                            class="oe_highlight" />


                    <button name="button_done1"
                            type="object"
                            string="Operate Confirm"
                            attrs="{'invisible': [('state', 'in', ['new', 'done', 'cancel'])]}"
                            states="open"
                            class="oe_highlight" />


                    <button name="button_done2"
                            type="object"
                            string="Done Confirm"
                            attrs="{'invisible': [('state', 'in', ['new', 'open', 'cancel'])]}"
                            states="done"
                            class="oe_highlight" />


                    <button name="button_done3"
                            type="object"
                            string="Cancel Confirm"
                            attrs="{'invisible': [('state', 'in', ['new', 'done', 'open'])]}"
                            states="cancel"
                            class="oe_highlight" />


                    <field name="stage_id"
                           widget="statusbar"
                           options="{'clickable': True, 'fold_field': 'fold'}" />
                </header>

                <sheet>
                    <group name="group_top">

                        <group name="group_left" string="Header info">
                            <field name="name" />

<!--                            <field name="colour" />-->
                            <field name="stock" />

                            <field name="author_ids" widget="many2many_tags" />
                            <field name="build_id" />
                            <field name="builder_name" />
                            <field name="builder_phone" />
                            <field name="builder_address" />
                            <field name="date_published"/>
                            <field name="publisher_id"/>
                            <field name="function_info" />
                            <field name="parking_zone" />
                            <field name="two_wheels" />
                            <field name="four_wheels" />
<!--                            <field name="parterid" />-->
<!--                            <field name="company_id" />-->
<!--                            <group>-->

<!--                            </group>-->

<!--                            <field name="company_id" string="lambda self: self.env.user"/>-->
<!--!&#45;&#45;                            <field name="company_id_s" />&ndash;&gt;-->
                        </group>

                        <group name="group right" string="Price_info">
                            <field name="retail_price" attrs="{'readonly':False}"/>
                            <field name="roll_price" attrs="{'readonly':True}" />
                            <field name="floor_cost" />
                            <field name="roll_qty" />
                            <field name="order_qty" attrs="{'readonly':True}"/>
                            <field name="free_qty" />
                            <field name="isbn" />
<!--                            <field name="active" />-->
                            <field name="progress_qty" />
                            <field name="image" widget="image" />
                            <field name="discount2" attrs="{'readonly':True}"/>

                            <field name="comment" attrs="{'readonly':True}" />
                            <field name="color" widget="int_color" />


                        </group>
                    </group>

                    <notebook>
                        <page name="page_lines" string="The Basic info">
                            <group string="BSIC_INFO">
                                <field name="sku" />
                                <field name="fibre" />
                                <field name="roll_type" />
                            </group>
                        </page>

                        <page name="page_line2" string="Company_info">
                            <group string="COMPANY_INFO">
                                <field name="company_id" groups="base.group_multi_company"/>
                                <field name="user_id"/>
                                <field name="company_details" />
                                <field name="tel_info" />
                                <field name="address_info" />
                            </group>
                        </page>

                        <page name="page_3" string="Product_lines">
                            <group string="PRODUCT_INFO">
                                <field name="product_lines">
                                    <tree string="coundttres" count="Count">
                                        <field name="foreign_key"  invisible="0" />
                                        <field name="product_id"  />
                                        <field name="product_qty"  sum="Total" />
                                    </tree>
                                </field>
                            </group>
                        </page>

                    </notebook>

                    <footer name="footerp">
                        <div class="oe_chatter">
                            <field name="message_follower_ids" groups="base.group_user" />
                            <field name="activity_ids" />
                            <field name="message_ids" />
                        </div>
                    </footer>


                </sheet>
            </form>

        </field>
    </record>


