                    <attribute name="invisible">True</attribute>
                </xpath>

                <xpath expr="//button[@name='button_done2']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>

                <xpath expr="//button[@name='button_done3']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>


            </data>

        </field>
    </record>
