    <record id="view_from_carpetcall_usernor" model="ir.ui.view">
        <field name="name">CarpetCALL Form_usernormal</field>
        <field name="model">carpetcall.book</field>
        <field name="inherit_id" ref="view_from_carpetcall" />
        <field name="groups_id" eval="[(4, ref('carpetcall_franchise.carpetcall_group_usernor'))]" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='discount2']" position="replace">
            </xpath>
<!--            <attribute name="invisible">True</attribute>-->
                <!-- Replace the filed with empty tag to remove it -->



            <data>
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="readonly">True</attribute>
                </xpath>

                <xpath expr="//field[@name='stock']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>

                <xpath expr="//field[@name='author_ids']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>

                <xpath expr="//field[@name='build_id']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>

                <xpath expr="//field[@name='builder_name']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>

                <xpath expr="//field[@name='builder_phone']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>

                <xpath expr="//field[@name='builder_address']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>

                <xpath expr="//field[@name='date_published']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>

                <xpath expr="//field[@name='publisher_id']" position="attributes">
                    <attribute name="invisible">False</attribute>
                    <attribute name="readonly">True</attribute>
                </xpath>

                <xpath expr="//field[@name='function_info']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>

                <xpath expr="//field[@name='parking_zone']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>

                <xpath expr="//field[@name='two_wheels']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>

                <xpath expr="//field[@name='four_wheels']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>

                <xpath expr="//field[@name='retail_price']" position="attributes">
                    <attribute name="invisible">False</attribute>
                    <attribute name="readonly">True</attribute>
                </xpath>

                <xpath expr="//field[@name='roll_price']" position="attributes">
                    <attribute name="invisible">False</attribute>
                    <attribute name="readonly">True</attribute>
                </xpath>

                <xpath expr="//field[@name='roll_qty']" position="attributes">
                    <attribute name="invisible">False</attribute>
                    <attribute name="readonly">True</attribute>
                </xpath>



                <xpath expr="//field[@name='floor_cost']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>


                <xpath expr="//field[@name='order_qty']" position="attributes">
                    <attribute name="readonly">True</attribute>
                    <attribute name="string">Reserved</attribute>
                </xpath>

                <field name="free_qty" position="after">
                    <field name="order_userno" readonly="False" />
                    <field name="left_userno" readonly="True" />
                </field>

                <xpath expr="//field[@name='comment']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>

                <xpath expr="//field[@name='isbn']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>

                <xpath expr="//field[@name='stage_id']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>



                <field name="isbn" position="after">
                    <field name="colour" readonly="True"/>
                </field>



                <xpath expr="//page[@name='page_line2']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>

